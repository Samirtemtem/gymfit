<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.LoginController">
    <children>
        <AnchorPane styleClass="main-container">
            <children>
                <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
                    <padding>
                        <Insets left="50" right="50"/>
                    </padding>
                    
                    <!-- Login Form -->
                    <VBox fx:id="loginForm" spacing="15" alignment="CENTER">
                        <Label text="Welcome Back" styleClass="title-label">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        
                        <JFXTextField fx:id="loginUsername" promptText="Username" styleClass="input-field"/>
                        <JFXPasswordField fx:id="loginPassword" promptText="Password" styleClass="input-field"/>
                        
                        <JFXButton text="Login" onAction="#handleLogin" styleClass="action-button" buttonType="RAISED"/>
                        <Label fx:id="loginErrorLabel" styleClass="error-label" visible="false"/>
                        
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="Don't have an account?"/>
                            <Hyperlink onAction="#showSignup" text="Sign up"/>
                        </HBox>
                    </VBox>
                    
                    <!-- Signup Form -->
                    <VBox fx:id="signupForm" spacing="15" alignment="CENTER" visible="false" managed="false">
                        <Label text="Create Account" styleClass="title-label">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        
                        <JFXTextField fx:id="signupNom" promptText="Last Name" styleClass="input-field"/>
                        <JFXTextField fx:id="signupPrenom" promptText="First Name" styleClass="input-field"/>
                        <JFXTextField fx:id="signupEmail" promptText="Email" styleClass="input-field"/>
                        <JFXTextField fx:id="signupTel" promptText="Phone Number" styleClass="input-field"/>
                        <JFXTextField fx:id="signupAdresse" promptText="Address" styleClass="input-field"/>
                        <JFXTextField fx:id="signupUsername" promptText="Username" styleClass="input-field"/>
                        <JFXPasswordField fx:id="signupPassword" promptText="Password" styleClass="input-field"/>
                        <JFXPasswordField fx:id="signupConfirmPassword" promptText="Confirm Password" styleClass="input-field"/>
                        
                        <JFXButton text="Sign Up" onAction="#handleSignup" styleClass="action-button" buttonType="RAISED"/>
                        <Label fx:id="signupErrorLabel" styleClass="error-label" visible="false"/>
                        
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="Already have an account?"/>
                            <Hyperlink onAction="#showLogin" text="Login"/>
                        </HBox>
                    </VBox>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>
